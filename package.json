{
	"name": "orc-shared",
	"version": "0.0.12",
	"description": "Shared code for Orckestra applications",
	"main": "dist/",
	"scripts": {
		"build": "orc-scripts build --no-flow",
		"watch": "orc-scripts build --no-flow --watch",
		"test": "orc-scripts test",
		"coverage": "orc-scripts test --coverage",
		"precommit": "lint-staged",
		"prepare": "npm run build"
	},
	"files": ["dist", "flow-typed"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Orckestra/orc-shared.git"
	},
	"author": "Gert SÃ¸nderby <gert.sonderby@orckestra.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Orckestra/orc-shared/issues"
	},
	"homepage": "https://github.com/Orckestra/orc-shared#readme",
	"devDependencies": {
		"orc-scripts": "0.2.2"
	},
	"peerDependencies": {
		"flow-bin": "^0.70.0"
	},
	"lint-staged": {
		"!(flow-typed/)*.{js,json,md}": ["prettier --write", "git add"],
		"!(flow-typed/)*.js": ["eslint"]
	}
}
